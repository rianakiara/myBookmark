<div class="modal" style="width:450px; margin-top:7%;">
  <div class="modal-header">
    <h3>Sign In</h3>
  </div>

  <div class="modal-body">
    <form method="post" class="login">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		  <div>
			<%= f.label :email, style: "margin-left:22%;" %><br />
		  	<%= f.email_field :email, :autofocus => true, style: "margin-left:22%;" %></div>
		  <div>
		  <%= f.label :password, style: "margin-left:22%;" %><br />
		  <%= f.password_field :password, style: "margin-left:22%;" %></div>
		  <br />

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me, style: "display:inline" %> <%= f.label :remember_me, style: "display:inline" %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in", class: "btn btn-primary pull-right" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</form>
  </div>
</div>