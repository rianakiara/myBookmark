<div class="page-header">
  <h1>My Bookmarks</h1>
</div>

<%= link_to "Create a New Bookmark", new_bookmark_path, class: "btn btn-primary" %>

<% @bookmarks.each do |bookmark| %>
  <div class="bookmark">
    <div class="row">
      <div class="span1">
        
      </div>
      <div class="span7">
        <strong><%= bookmark.title %></strong>
        <p><%= bookmark.description %></p>
        <div class="meta">
          <span class="admin">
            <%= link_to "Edit", edit_bookmark_path(bookmark) %> |
            <%= link_to "Delete", 
              bookmark, 
              method: :delete, 
              data: {
                confirm: "Are you sure you want to delete this bookmark?"
              }
            %>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>